doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        title Gladys Fact App
        meta(name="description", content="")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        base(href="/app/fact")
        link(rel="stylesheet" href='../css/app.css')
